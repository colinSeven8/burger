<div class="burgerHeader">
    <img src="assets/img/burger.png" alt="burger" style="width: 150px; height: 150px;">
    <h1>Eat-Da-Burger!</h1>
</div>

<div class="clearfix">
<div class="addBurger">
    <form class="create-form">
        <div class="form-group">
            <textarea id="bu"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <p style="color: black;">Enter a burger you want to eat Click the "Submit" button</p>
    </form>
</div>
    <div class="burgerContainer">
        {{#each burgers}}
        {{#unless devoured}}
        <div class="wrapper">
            <button class="change-devoured btn btn-success" data-id="{{id}}" data-newdevoured={{devoured}}>
                {{#if devoured}}Make another!{{else}}Devour it!{{/if}}
            </button>
            <div class="notDevouredBurger">
                {{id}}.{{burger_name}}
            </div>
        </div>
        {{/unless}}
        {{/each}}
    </div>

    <div class="burgerContainer">
        {{!-- Burgers that have been devoured --}}
        {{#each burgers}}
        {{#if devoured}}
        <div class="devouredBurger">
            {{id}}.{{burger_name}}
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>
